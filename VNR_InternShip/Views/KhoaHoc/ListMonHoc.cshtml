@model List<VNR_InternShip.Models.MonHocModel>
@{
    ViewBag.Title = "Khoa Hoc";
}
<div class="container-fluid d-flex justify-content-center" style="gap:20px">
    @foreach (var subject in Model)
    {
        <div class="row mt-5" >
            <div class="col-sm-4">
                <div class="card">
                    <img src="~/image/@subject.ImageKH" class="card-img-top" width="100%">
                    <div class="card-body pt-0 px-0">
                        <div class="d-flex flex-row justify-content-between mb-0 px-3">
                            <p class="text-muted mt-1" >@subject.NameTitle</p>
                        </div>
                        <p class="text-muted mt-1" style="margin-left:40px">@subject.Description</p>
                    </div>


                </div>
            </div>
        </div>
    }
    
</div>
<div class="container-fluid d-flex justify-content-center mt-5">
    <a href="@Url.Action("ListKhoaHoc", "KhoaHoc")">
        <button type="button" class="btn btn-primary"><small>Trở lại</small></button>
    </a>
</div>
