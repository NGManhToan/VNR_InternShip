@model List<VNR_InternShip.Models.KhoaHocModel>
@{
    ViewBag.Title = "Khoa Hoc";
}
<div class="container-fluid d-flex justify-content-center" style="gap:20px">
    @foreach (var course in Model)
    {
        <div class="row mt-5">
            <div class="col-sm-4">
                <div class="card">
                    <img src="~/image/@course.Image" class="card-img-top" width="100%">
                    <div class="card-body pt-0 px-0">
                        <div class="d-flex flex-row justify-content-between mb-0 px-3">
                            <p class="text-muted mt-1 mb-0">@course.NameCourse</p>

                        </div>
                        <div class="mx-3 mt-3 mb-2">
                            <a href="@Url.Action("ListMonHoc", "KhoaHoc", new { idKhoahoc = course.Id })">
                                <button type="button" class="btn btn-danger btn-block"><small>Chi tiết</small></button>
                            </a>
                            
                            </div>
                    </div>


                </div>
            </div>
        </div>
    }
    
</div>
